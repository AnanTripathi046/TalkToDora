<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/liimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tool:layout_constrainedHeight="true"
        tool:layout_constraintBottom_toTopOf="@id/textView3"
        tool:layout_constraintEnd_toEndOf="parent"
        tool:layout_constraintStart_toStartOf="parent"
        tool:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/nomessage" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="You are not Alone"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        tool:layout_constraintBottom_toTopOf="@id/listtext"
        tool:layout_constraintEnd_toEndOf="parent"
        tool:layout_constraintStart_toStartOf="parent"
        tool:layout_constraintTop_toBottomOf="@id/liimage" />

    <TextView
        android:id="@+id/listtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:layout_marginHorizontal="8dp"
        tool:layout_constraintTop_toBottomOf="@id/textView3"
        tool:layout_constraintEnd_toEndOf="parent"
        tool:layout_constraintStart_toStartOf="parent"
        tool:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>